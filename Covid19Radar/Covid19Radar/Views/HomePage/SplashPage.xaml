<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Covid19Radar.Views.SplashPage"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:prism="http://prismlibrary.com"
    xmlns:resources="clr-namespace:Covid19Radar.Resources;assembly=Covid19Radar"
    Title="{x:Static resources:AppResources.AppName}"
    ios:Page.UseSafeArea="true"
    prism:ViewModelLocator.AutowireViewModel="True"
    Style="{StaticResource DefaultPageStyle}"
    Visual="Material">
    <!--
        Workaround for fixing ScrollView truncates items issue.
        https://github.com/xamarin/Xamarin.Forms/issues/13597
    -->
    <ContentView>
    <ScrollView>
        <Grid Margin="20" Style="{StaticResource DefaultGridLayout}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackLayout
                Grid.Row="0"
                Margin="0,0,0,10"
                >
                <Label
                    AutomationProperties.IsInAccessibleTree="True"
                    TabIndex="1"
                    Margin="0,20,0,20"
                    Style="{StaticResource DefaultTitleLabel}"
                    Text="{x:Static resources:AppResources.Beta_Splash_WelcomeBeta}"
                    />

                <ffimageloading:CachedImage
                    Margin="0,0,0,20"
                    Aspect="AspectFit"
                    Scale="0.9"
                    Source="SplashImg.png"
                    />

                <Label
                    AutomationProperties.IsInAccessibleTree="True"
                    TabIndex="2"
                    Style="{StaticResource DefaultLabel}"
                    Margin="0,0,0,10"
                    Text="{x:Static resources:AppResources.Beta_Splash_Description1}"
                    />
                <Label
                    AutomationProperties.IsInAccessibleTree="True"
                    TabIndex="3"
                    Style="{StaticResource DefaultLabel}"
                    Margin="0,0,0,10"
                    Text="{x:Static resources:AppResources.Beta_Splash_Description2}"
                    />
                <Label
                    AutomationProperties.IsInAccessibleTree="True"
                    TabIndex="4"
                    Style="{StaticResource DefaultLabel}"
                    Margin="0,0,0,10"
                    Text="{x:Static resources:AppResources.Beta_Splash_Description3}"
                    />

                <Label
                    AutomationProperties.IsInAccessibleTree="True"
                    TabIndex="5"
                    Style="{StaticResource LinkLabelStyleMedium}"
                    Margin="5,0,0,5"
                    Text="{x:Static resources:AppResources.Beta_Splash_GitHub}">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenGitHub}" />
                    </Label.GestureRecognizers>
                </Label>
                <Label
                    AutomationProperties.IsInAccessibleTree="True"
                    TabIndex="9"
                    Margin="0,0,0,5"
                    Style="{StaticResource DefaultLabelSmall}"
                    Text="{x:Static resources:AppResources.Beta_Splash_GitHubAccountRequired}" />

            </StackLayout>
            <StackLayout
                Grid.Row="1"
                Margin="0,0,0,20"
                >
                <Button
                    AutomationProperties.IsInAccessibleTree="True"
                    TabIndex="7"
                    Command="{Binding OnClickContinue}"
                    Style="{StaticResource DefaultButton}"
                    Text="{x:Static resources:AppResources.Beta_Splash_Acknowledge}"
                    IsEnabled="{Binding EnableContinue}"
                    />
                <Button
                    AutomationProperties.IsInAccessibleTree="True"
                    TabIndex="8"
                    Margin="0,10,0,0"
                    Command="{Binding Path=OnClickUseStable}"
                    Style="{StaticResource DefaultButton}"
                    Text="{x:Static resources:AppResources.Beta_Splash_InstallStable}"
                    />
            </StackLayout>
        </Grid>
    </ScrollView>
    </ContentView>
</ContentPage>